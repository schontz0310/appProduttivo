<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">#000000</item>

        <!-- Adicione a seguinte linha para definir a cor da barra de status padrão para todo o aplicativo. -->
        <item name="android:statusBarColor">@color/app_bg</item>
        <!-- Adicione a seguinte linha para definir a cor de texto da barra de status padrão para todo o aplicativo
        ser uma cor clara (falso) ou escura (verdadeiro) -->
        <item name="android:windowLightStatusBar">false</item>
        <!-- Adicione a seguinte linha para definir a cor de fundo padrão para todo o aplicativo. -->
        <item name="android:windowBackground">@color/app_bg</item>
    </style>

    <!-- Adds the splash screen definition -->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- <item name="android:statusBarColor">@color/splashscreen_bg</item> -->
        <!-- <item name="android:background">@drawable/background_splash</item> -->
    </style>

</resources>

